<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopmanage_info"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginBottom="56dp"
        android:background="@drawable/buttonchange"
        android:fontFamily="@font/regular"
        android:paddingBottom="7dp"
        android:stateListAnimator="@null"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/returnbutton1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:background="@null"

        android:stateListAnimator="@null"
        android:text="<"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:fontFamily="@font/bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="84dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/demilight"
        android:text="매장 리뷰"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="432dp"
        android:layout_height="540dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="shop"
            android:drawableBottom="@drawable/slicebar"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="WEIEZ RESTAURANT"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="370dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/reviewuser"
            android:orientation="vertical"
            android:paddingLeft="100dp"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/review_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black"
                android:text="reviewtitle"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/review_score"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black"
                android:text="★★☆☆☆"
                android:textColor="#FFFFFF"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/review_content"
                android:layout_width="189dp"
                android:layout_height="230dp"
                android:fontFamily="@font/regular"
                android:text="content"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <EditText
            android:id="@+id/review_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:background="@drawable/reviewmanager"
            android:ems="100"
            android:inputType="text"
            android:hint="입력하세요."
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>