<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp"></corners>
            <gradient
                android:endColor="#dbd9d9"
                android:startColor="#dbd9d9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#dbd9d9" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="40dp"></corners>

            <gradient
                android:endColor="#e6e1e1"
                android:startColor="#e6e1e1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e6e1e1"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>